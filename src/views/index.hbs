<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lendo Comentarios</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        #conteiner{
            display: grid;
            grid-template-columns: 1fr 1fr;
            column-gap: 3%;
            background-color: #d1d1d1;
            padding: 10px;
        }

        #conteiner > div {
            width: 100%;
            height: 95vh;
            background-color: white;

        }

        #save-btn {
            border-radius: 20px;
            height: 40px;
            width: 180px; 
            font-size: 20px;
            margin-left: 20px;
            margin-top: 15px;
            background-color: #d1d1d1;
            border: none;
            color: black;
        }

        #save-btn:hover{
            background-color: #E1E8ED;
            color: black;
            cursor: pointer;
        }

        
    </style>
</head>
<body>
     <div id="conteiner">   
        <div id="esquerda">
            <h1>Escreva o seu comentário</h1>
            <textarea id="msg" cols="60" rows="20" name="msg"/></textarea>
            <div class="button">
                <button id="save-btn" onclick="enviar()">Comentar</button>
            </div>
        </div>
        


        <div id="direita">
            <h1>Comentários</h1>
            
        </div>
    </div>

<script>
    function enviar (){
        const text = document.querySelector("#msg").value
        $.ajax({
            type:"POST", 
            url: "localhost:8081/criarComentario",
            data:{
                text
            },
            contentType: "application/json",
            success: function (res){
                console.log(res)
            }
        })
    }
    
</script>

</body>
</html>